{% extends 'admin_base.html.twig' %}

{% block body %}
    <div class="content">
        <div class="content-header">
            <h2> Добавить страницу</h2>
        </div>
        <div class="content-body">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Quick Example</h3>
                </div>
                <div class="card-body">
                    <div class="col-sm-6">
                        {{ form_start(PageAdd) }}
                        {{ form_row(PageAdd.title) }}
                        {{ form_row(PageAdd.content) }}
                        {{ form_row(PageAdd.url) }}
                        {{ form_row(PageAdd.status) }}
                        <button type="submit" class="btn btn-outline-success">Сохранить</button>
                        {{ form_end(PageAdd) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        ClassicEditor
            .create(document.querySelector('#page_content'))
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });
    </script>
{% endblock %}

