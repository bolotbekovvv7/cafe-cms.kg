{% extends 'admin_base.html.twig' %}

{% block title %}Pages{% endblock %}

{% block body %}
    <section class="content-header">
        <h2>Pages table</h2>
        <div><a class="btn btn-secondary" href="{{ url('app_page_add') }}" style="align-content: end">Добавить</a></div>
    </section>
    <section class="content">
        <div class="card">
            <div class="card-header">Pages</div>

            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Url</th>
                        <th>Status</th>

                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for page in pages %}
                        <tr>
                            <th>{{ page.id }}</th>
                            <td>{{ page.title }}</td>
                            <td>{{ page.url }}</td>
                            <td>{% if  page.status == 0 %}
                                    Неактивен
                                {% else %}
                                    Активен

                                {% endif %}
                            </td>
                            <td class="text-right py-0 align-middle">
                                <div class="btn-group btn-group">
                                    <a href="{{ url('app_page_edit',{id: page.id}) }}" class="btn btn-info"><i
                                                class="fas fa-edit"></i></a>
                                    <a href="{{ url('app_page_delete', {id: page.id}) }}" class="btn btn-danger"><i
                                                class="fas fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <nav aria-label="Page navigation example">
                    {{ knp_pagination_render(pages) }}
                </nav>
            </div>
        </div>
    </section>

{% endblock %}
