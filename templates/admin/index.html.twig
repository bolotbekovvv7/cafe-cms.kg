{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Email</th>
            <th scope="col">Roles</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <th scope="row">{{ user.id() }}</th>
                <td>{{ user.email() }}</td>
                {% if user.roles()[0] == 'ROLE_USER' %}
                    <td>Пользователь</td>
                {% else %}
                    <td>Админ</td>
                {% endif %}
                <td><a class="btn btn-outline-info btn-sm" href="{{ url('app_admin_add',{id: user.id()}) }}">Назначить админом</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
